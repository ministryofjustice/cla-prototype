form name="problemForm" ng-submit="submit(problemForm)"
  fieldset
    dl ng-repeat="field in categories.list|filter:'!none'|orderBy:'label'"
      dd
        label.m-block
          input>(
            type="radio"
            value="{{field.name}}"
            name="category"
            ng-model="categories.selected"
            ng-required="true"
          )
          span {{field.label}}
          help-text field="field"
    dl ng-repeat="field in categories.list|filter:'none'"
      dd
        label.m-block
          input>(
            type="radio"
            value="{{field.name}}"
            name="category"
            ng-model="categories.selected"
            ng-required="true"
          )
          span {{field.label}}
          help-text field="field"

  = partial 'action', locals: { button_label: 'Continue' }
