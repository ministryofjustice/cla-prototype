form name="problemForm" ng-submit="submit(problemForm)"
  fieldset
    dl ng-repeat="field in categories.list"
      dd
        label.m-block
          input>(
            type="radio"
            value="{{field.name}}"
            name="category"
            ng-model="categories.selected"
            ng-required="true"
          )
          span {{field.label}}
          help-text field="field"

  p.action: button.button Next step
