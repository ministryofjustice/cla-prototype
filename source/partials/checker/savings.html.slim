go-back-link

h1 Your savings

form name="savingsForm" ng-submit="submit(savingsForm)"
  div ng-repeat="item in savings" ng-if="item.me || item.partner && hasPartner"
    h3 ng-if="item.partner" Your partnerâ€™s savings
    fieldset ng-repeat="set in item"
      dl ng-repeat="field in set"
        dt
          = label_tag '{{field.name}}', caption: '{{field.label}}'
          help-text field="field"
        dd
          label.field-label.prefix(
            for="{{field.name}}"
            ng-if="field.prefix"
          )  {{field.prefix}}
          input.form-control.m-small>(
            type="{{field.type}}"
            id="{{field.name}}"
            min="{{field.min}}"
            max="{{field.max}}"
            pattern="{{field.pattern}}"
            ng-model="field.value"
            ng-required="true"
            delimited-number
        )

  = partial 'action', locals: { button_label: 'Continue' }
